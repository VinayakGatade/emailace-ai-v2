# Production Environment Configuration for EmailAce AI

# Application
ENVIRONMENT=production
DEBUG=false
APP_NAME=EmailAce AI
APP_VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=sqlite:///./data/emailace.db

# CORS (Update with your actual domains)
ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Email Configuration
GMAIL_USERNAME=your-production-email@gmail.com
GMAIL_PASSWORD=your-app-password
OUTLOOK_USERNAME=your-production-email@outlook.com
OUTLOOK_PASSWORD=your-app-password
REPLY_EMAIL=your-reply-email@company.com

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
AI_MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=WARNING
LOG_FILE=./logs/emailace.log

# Email Processing
MAX_EMAILS_PER_SYNC=50
EMAIL_SYNC_INTERVAL=300
MAX_RETRY_ATTEMPTS=3

# Knowledge Base
KNOWLEDGE_BASE_FILE=knowledge_base.json
MAX_CONTEXT_LENGTH=1000


